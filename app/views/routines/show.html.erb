<div class="container">
  <!-- Page Banner -->

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)), url(<%= asset_path("squat_pose.png") %>);">
</div>  
<%= @routine.messages.last.content.html_safe %>



      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalform">Revise</button>
      <div class="modal fade" id="modalform" tabindex="-1">
          <div class="modal-dialog">
              <div class="modal-content">
              <div class="modal-header">
                  <h5 class="modal-title">Revise your routine</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                  <%= simple_form_for @routine do |f| %>
                      <%= f.input :comments, label: "What would you like to change?" %>
                  </div>
                  <div class="modal-footer">
                      <%= f.button :submit, "Update Plan", class:"btn btn-primary" %>
                      <% end %>
                  </div>
              </div>
          </div>
      </div>
    </div>
  </div>

