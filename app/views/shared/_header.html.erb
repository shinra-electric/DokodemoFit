<header class="p-3 text-bg-dark"> 
    <div class="container"> 
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start"> 
            <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none"> 
            <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap">
                <use xlink:href="#bootstrap">
                </use>
            </svg> 
            </a> 
            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0"> 
                <li><a href="/" class="nav-link px-2 text-secondary">Home</a></li> 
                <li><a href="#"  data-bs-toggle="modal" data-bs-target="#modalform" class="nav-link px-2 text-white">New routine</a></li> 
            </ul>  
            <button type="button" class="btn btn-outline-light me-2">Login</button> 
            <button type="button" class="btn btn-warning">Sign-up</button> 
            <% if user_signed_in? %>
                <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-warning btn-lg" %> 
            <% else %>
                <div class="d-flex gap-3">
                    <%= link_to "Sign up", new_user_registration_path, class: "btn btn-warning btn-lg" %>
                    <%= link_to "Sign in", new_user_session_path, class: "btn btn-outline-light btn-lg" %>
                </div>
            <% end %>
        </div> 
    </div> 
</header>